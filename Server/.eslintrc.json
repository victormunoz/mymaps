{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "__": "readonly",
        "__n": "readonly",
        "artifacts": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "require-atomic-updates": ["off"],
        "no-unused-vars": ["error"],
        "semi": ["warn"],
        "semi-spacing": ["warn"],
        "semi-style": ["warn"],
        "no-prototype-builtins": ["off"],
        "block-spacing": ["warn"],
        "comma-spacing": ["warn"],
        "no-return-await": ["off"],
        "no-lonely-if": ["error"],
        "indent": ["warn"],
        "key-spacing": ["warn"],
        "keyword-spacing": ["warn"],
        "func-call-spacing": ["warn"],
        "eol-last": ["warn"],
        "comma-style": ["warn"],
        "arrow-spacing": ["warn"],
        "global-require": ["off"],
        "no-var": ["error"],
        "prefer-const": ["error"],
        "prefer-arrow-callback": ["error"],
        "sort-imports": ["warn"],
        "no-use-before-define": ["error"],
        "require-await": ["error"],
        "no-unmodified-loop-condition": ["error"],
        "no-return-assign": ["error"],
        "brace-style": ["warn", "1tbs", {"allowSingleLine":  true}],
        "space-before-function-paren": ["warn", "always"],
        "space-before-blocks": ["warn"],
        "space-infix-ops": ["warn"],
        "no-empty": ["warn"]
    }
}
